<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_product_view translate="label">
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/dt/ajax_checkout.js</name>
            </action>
        </reference>
        <reference name="product.info">
            <action method="setTemplate">
                <template>dt/catalog/product/view.phtml</template>
            </action>
        </reference>
    </catalog_product_view>
    <checkout_cart_index>
        <reference name="checkout.cart.methods.onepage.top">
            <action method="setTemplate"><template>dt/checkout/link.phtml</template></action>
        </reference>
        <reference name="checkout.cart.methods.onepage.bottom">
            <action method="setTemplate"><template>dt/checkout/link.phtml</template></action>
        </reference>
        <reference name="checkout.cart">
            <action method="setCartTemplate"><value>dt/checkout/cart.phtml</value></action>
            <block type="core/template" name="quick_checkout" template="dt/checkout/cart/quick_checkout.phtml" />
        </reference>
    </checkout_cart_index>
</layout>
